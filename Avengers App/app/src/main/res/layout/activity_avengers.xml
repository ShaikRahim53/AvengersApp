                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/nameOfAvenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Thor Odinson"
                android:layout_toRightOf="@id/thor"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="18sp"
                >
            </TextView>

            <TextView
                android:id="@+id/emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="thorodinson@13gmail.com"
                android:layout_toRightOf="@id/thor"
                android:layout_below="@id/nameOfAvenger"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                >
            </TextView>

            <TextView
                android:id="@+id/mobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="+91 6584712458"
                android:layout_toRightOf="@id/thor"
                android:layout_below="@id/emailId"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                >
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/widow"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/widow"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/nameOfAvenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Natasha Romanoff"
                android:layout_toRightOf="@id/widow"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="18sp"
                >
            </TextView>

            <TextView
                android:id="@+id/emailId"
                android:layout_width="match_parent"
