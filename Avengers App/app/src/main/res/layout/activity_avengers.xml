            </TextView>

            <TextView
                android:id="@+id/mobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="+91 9782354897"
                android:layout_toRightOf="@id/widow"
                android:layout_below="@id/emailId"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                >
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/black_panther"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/black_panther_new"
                android:layout_margin="20dp"
                />

            <TextView
                android:id="@+id/nameOfAvenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="TChalla"
                android:layout_toRightOf="@id/black_panther"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="18sp"
                >
            </TextView>

            <TextView
                android:id="@+id/emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="tchalla@28gmail.com"
                android:layout_toRightOf="@id/black_panther"
                android:layout_below="@id/nameOfAvenger"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                >
            </TextView>

            <TextView
                android:id="@+id/mobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="+91 8754123548"
                android:layout_toRightOf="@id/black_panther"
                android:layout_below="@id/emailId"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                >
            </TextView>

            <EditText
                android:id="@+id/etText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_below="@id/black_panther"
                android:hint="Enter any avenger name:"
                >
            </EditText>

            <Button
                android:id="@+id/sendButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etText"
                android:layout_marginLeft="145dp"
                android:layout_marginRight="145dp"
                android:text="Send"
                android:backgroundTint="@color/black"
                android:textSize="16sp"
                >
            </Button>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>