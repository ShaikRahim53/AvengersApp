<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageView
            android:id="@+id/captain_america"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/captain_america"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/nameOfAvenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Steve Rogers"
            android:layout_toRightOf="@id/captain_america"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="18sp"
            >
        </TextView>

        <TextView
            android:id="@+id/emailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="steverogers@123gmail.com"
            android:layout_toRightOf="@id/captain_america"
            android:layout_below="@id/nameOfAvenger"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            >
        </TextView>

        <TextView
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="+91 9182031938"
            android:layout_toRightOf="@id/captain_america"
            android:layout_below="@id/emailId"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            >
        </TextView>
     </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iron_man"
                android:layout_width="120dp"
                android:layout_height="120dp"
               android:layout_margin="20dp"
                android:src="@drawable/tony_stark_new"
                />

            <TextView
                android:id="@+id/nameOfAvenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tony Stark"
                android:layout_toRightOf="@id/iron_man"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="18sp"
                >
            </TextView>

            <TextView
                android:id="@+id/emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="tonystark@456gmail.com"
                android:layout_toRightOf="@id/iron_man"
                android:layout_below="@id/nameOfAvenger"
                android:layout_marginTop="10dp"
